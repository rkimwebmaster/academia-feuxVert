{{ form_start(form) }}
<div class="row">
	<div class="col-md-6">
		<div class="form-group">
			{{ form_row(form.civilite) }}
		</div>
		<div class="form-group">
			{{ form_row(form.identite.nom) }}
		</div>
		<div class="form-group">
			{{ form_row(form.identite.prenom) }}
		</div>
		<div class="form-group">
			{{ form_row(form.identite.adresse) }}
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-group">
			{{ form_row(form.identite.postnom) }}
		</div>
		<div class="form-group">
			{{ form_row(form.identite.telephone) }}
		</div>
		<div class="form-group">
			{{ form_label(form.promotion) }}
			{{ form_widget(form.promotion, {label_attr:{class:'select2bs4'}}) }}
			{{ form_errors(form.promotion) }}
		</div>
	</div>
</div>
{{ form_widget(form) }}
<button class="btn btn-default">
	<span class="fa fa-download"></fa>
	{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
