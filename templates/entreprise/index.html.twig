{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}
{% block lesboutons %}
	<a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}" title="Modifier élément  " class="btn btn-info">
		<i class="fas fa-edit"></i>
	</a>
{% endblock %}
{% block titre %}
	Université
{% endblock %}
{% block positionnement %}
	<span class="fa fa-angle-double-right"></span>
	Config.
	<span class="fa fa-angle-double-right"></span>
	Université
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Email</th>
                <th>Telephone1</th>
                <th>Telephone2</th>
                <th>Website</th>
                <th>IsPublique</th>
                <th>Sigle</th>
                <th>Logo</th>
                <th>Prix depot </th>
                <th>Monaie</th>
                <th>Devise</th>
                <th>Boite Postale</th>
                <th>Annee Academique Courante</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.adresse }}</td>
                <td>{{ entreprise.ville }}</td>
                <td>{{ entreprise.pays }}</td>
                <td>{{ entreprise.email }}</td>
                <td>{{ entreprise.telephone1 }}</td>
                <td>{{ entreprise.telephone2 }}</td>
                <td>{{ entreprise.website }}</td>
                <td>{{ entreprise.isPublique ? 'Yes' : 'No' }}</td>
                <td>{{ entreprise.sigle }}</td>
                <td>{{ entreprise.logo }}</td>
                <td>{{ entreprise.prixDepot }}</td>
                <td>{{ entreprise.monaie }}</td>
                <td>{{ entreprise.devise }}</td>
                <td>{{ entreprise.boitePostale }}</td>
                <td>{{ entreprise.anneeAcademiqueCourante }}</td>
                <td>
                    <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}"class="btn btn-default btn-sm"><span class="fa fa-search-plus"></span></a>
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}"class="btn btn-default btn-sm"><span class="fa fa-edit"></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16"class="text-warning">aucun élément trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entreprise_new') }}">Create new</a>
{% endblock %}
