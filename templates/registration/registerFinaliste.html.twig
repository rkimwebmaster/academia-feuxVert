{% extends 'base.html.twig' %}

{% block title %}Création d'un finaliste
{% endblock %}
{% block lesboutons %}
	<a href="{{url('user_index')}}" title="Retour à la liste " class="btn btn-info">
		<i class="fa fa-reply-all"></i>
	</a>
{% endblock %}
{% block titre %}
	Création des finalistes
{% endblock %}
{% block positionnement %}
	<span class="fa fa-angle-double-right"></span>
	Users
	<span class="fa fa-angle-double-right"></span>
	Création
{% endblock %}
{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	{{ form_start(registrationForm) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(registrationForm) }}
    </div>

	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(registrationForm.username) }}
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe',
			attr:{'minlength':8}
        }) }}
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(registrationForm.email) }}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="form-group">
				{{ form_row(registrationForm.finaliste.civilite) }}
			</div>
		</div>
		<div class="col-md-3">
			<div class="form-group">
				{{ form_row(registrationForm.finaliste.identite.nom ) }}
			</div>
		</div>
		<div class="col-md-3">
			<div class="form-group">
				{{ form_row(registrationForm.finaliste.identite.postnom) }}
			</div>
		</div>
		<div class="col-md-3">
			<div class="form-group">
				{{ form_row(registrationForm.finaliste.identite.prenom) }}
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(registrationForm.finaliste.identite.telephone) }}
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(registrationForm.finaliste.promotion ) }}
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(registrationForm.finaliste.identite.adresse ) }}
			</div>
		</div>
		
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				{{ form_row(registrationForm.roles, {label_attr:{class:'switch-custom'}}) }}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				{{ form_row(registrationForm.agreeTerms, {label_attr:{class:'switch-custom'}}) }}
			</div>
		</div>
	</div>

	<button type="submit" class="btn btn-default">
		<span class="fa fa-download"></span>
		Enregistrer</button>
	{{ form_end(registrationForm) }}
	{# <div class="social-auth-links text-center mt-2 mb-3">
				<a href="#" class="btn btn-block btn-primary">
					<i class="fab fa-facebook mr-2"></i>
					Sign in using Facebook
				</a>
				<a href="#" class="btn btn-block btn-danger">
					<i class="fab fa-google-plus mr-2"></i>
					Sign in using Google+
				</a>
			</div> #}
{% endblock %}
