{% extends 'base.html.twig' %}

{% block title %}Changez mot de passe  utilisateur
{% endblock %}
{% block titre %}
	Changez mot de passe utilisateur
{% endblock %}
{% block lesboutons %}{% endblock %}
{% block positionnement %}
	<span class="fa fa-angle-double-right"></span>
	Profile
	<span class="fa fa-angle-double-right"></span>
	Modification
{% endblock %}
{% block body %}
	{{ form_start(form) }}
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				{{ form_row(form.username) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				{{ form_row(form.email) }}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(form.formerPassword) }}
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(form.plainPassword.first) }}
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				{{ form_row(form.plainPassword.second) }}
			</div>
		</div>

	</div>

	<button type="submit" class="btn btn-default">
		<span class="fa fa-download"></span>
		Enregistrer</button>
	{{ form_end(form) }}
	{# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}
